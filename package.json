{
  "name": "notebook",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "db:init": "node -r @std/esm scripts/initDB.mjs",
    "db:seed": "node -r @std/esm scripts/seedDB.mjs",
    "db:destroy": "rm -rf ./db.sqlite",
    "db:setup": "npm run db:destroy && npm run db:init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuliaChudak/notebook.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JuliaChudak/notebook/issues"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "jsx": "never",
          "mjs": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".mjs"
          ]
        }
      }
    },
    "env": {
      "node": true
    }
  },
  "homepage": "https://github.com/JuliaChudak/notebook#readme",
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@std/esm": "^0.26.0",
    "knex": "^0.20.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "rc": "^1.2.8",
    "sqlite3": "^4.1.0"
  }
}
